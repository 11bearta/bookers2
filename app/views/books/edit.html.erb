<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :Title, class: "form-group form-control" %>

<h4>Opinion</h4>
<%= f.text_area :Opinion, class: "form-group form-control" %>

<%= f.submit "Update Book", class: "btn btn-default" %>

<% end %>
<%= link_to "Show" , book_path(@book.id)  %>
<%= link_to "Books", books_path %>